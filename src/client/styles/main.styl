.full-centered-content
  display flex
  flex-direction column
  flex-wrap wrap
  justify-content center
  align-content center
  align-items center

.spring
  flex 1 1 auto

.collection
  display flex
  flex-direction: column
  justify-content: flex-start

  overflow-x hidden
  overflow-y scroll

  background-color: alpha(#fff, 1)

  >.container
    min-height 120px

    >.item
      background-color: alpha(#000, 0.0)
      display flex
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: center;
      align-content: center;
      align-items: center;

      &:last-child
        margin-bottom: 216px

  &.list
    background-color alpha(#fff,1)
    >.container
      display grid
      padding 8px
      grid-gap 4px

  &.grid
    background-color alpha(#fff,1)
    >.container
      display grid
      padding 8px
      grid-gap 4px
      grid-template-columns repeat(auto-fit, minmax(180px,1fr));

.item.el-loading-parent--relative
  >div.el-loading-mask
    background-color alpha(#fff,0.3) !important
    >.el-loading-spinner
      top: calc(50% - 0px) !important
      circle
        stroke: #fff
